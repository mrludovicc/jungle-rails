<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }
  .login-form {
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
    max-width: 400px;
    margin: 50px auto;
  }
  .login-input {
    display: block;
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: none;
    border-radius: 5px;
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
    font-size: 16px;
    color: #333;
  }
  .login-submit {
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  .login-submit:hover {
    background-color: #3e8e41;
  }
  .login-title {
    text-align: center;
    margin-bottom: 30px;
  }
</style>

<section>
  <%= form_tag '/sessions' do %>
    <div class="login-form">
      <h1 class="login-title">Login</h1>
      <label for="email">Email:</label>
      <%= text_field_tag :email, nil, class: 'login-input' %>
      <label for="password">Password:</label>
      <%= password_field_tag :password, nil, class: 'login-input' %>
      <%= submit_tag "Submit", class: 'login-submit' %>
      <br>
      <h5> Not registered? <a href="/users/new">Signup now!</a></h5>
    </div>
  <% end %>
</section>